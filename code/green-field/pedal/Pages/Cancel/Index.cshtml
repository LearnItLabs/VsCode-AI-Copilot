@page
@model PedalTours.Pages.Cancel.IndexModel
@{
    ViewData["Title"] = "Cancel Tour";
    var today = DateTime.Today;
    var startDateStr = Request.HasFormContentType ? Request.Form["TourStartDate"].ToString() : "";
    DateTime? startDate = null;
    if (!string.IsNullOrEmpty(startDateStr))
    {
        DateTime parsed;
        if (DateTime.TryParse(startDateStr, out parsed))
        {
            startDate = parsed;
        }
    }
    var isTooLate = startDate.HasValue && (startDate.Value - today).TotalDays < 7;
}

<h1 class="display-6 mb-4">
    <i class="fas fa-ban text-danger"></i> Cancel your tour booking
</h1>

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div class="mb-3">
                <label for="BookingId" class="form-label">Reservation Number</label>
                <input type="text" id="BookingId" name="BookingId" class="form-control"
                       placeholder="Format: AB-1234" required pattern="[A-Za-z]{2}-\d{4}" title="Format: 2 letters, a hyphen, and 4 numbers (e.g., AB-1234)" />
            </div>
            <div class="mb-3">
                <label for="TourStartDate" class="form-label">Tour Start Date</label>
                <input type="date" id="TourStartDate" name="TourStartDate" class="form-control" required />
            </div>
            @if (isTooLate)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle"></i>
                    Cancellation is not allowed within 7 days of the tour start date. Please contact support for assistance.
                </div>
            }
            <div class="mb-3">
                <label for="Reason" class="form-label">Reason for Cancellation</label>
                <textarea id="Reason" name="Reason" class="form-control" rows="3" placeholder="Let us know why you need to cancel..." required></textarea>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input type="checkbox" id="Confirm" name="Confirm" class="form-check-input" required />
                    <label for="Confirm" class="form-check-label">
                        I confirm that I want to cancel this booking.
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-danger" @(isTooLate ? "disabled" : "")>
                <i class="fas fa-ban"></i> Cancel Booking
            </button>
            <a asp-page="/Tours/Index" class="btn btn-secondary ms-2">
                <i class="fas fa-arrow-left"></i> Back to Tours
            </a>
        </form>
    </div>
    <div class="col-md-4">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle"></i>
            <strong>Important:</strong> Cancelling your booking is permanent and cannot be undone.
        </div>
        <div class="card">
            <div class="card-header">
                <h6><i class="fas fa-info-circle"></i> Need Help?</h6>
            </div>
            <div class="card-body">
                <p>If you have questions or need assistance, please <a href="mailto:support@pedalpine.com">contact support</a>.</p>
            </div>
        </div>
    </div>
</div>
